<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.popularmoviesstage2">
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <application
        android:allowBackup="true"
        android:icon="@drawable/baseline_movie_black_36"
        android:label="@string/app_name"
        android:roundIcon="@drawable/baseline_movie_black_36"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.popularmoviesstage2.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.popularmoviesstage2.DetailActivity"
            android:parentActivityName="com.example.popularmoviesstage2.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.popularmoviesstage2.MainActivity" />
        </activity>
    </application>

</manifest>